{
  "name": "icare-components",
  "version": "1.1.0-develop.3",
  "description": "Stencil Component Starter",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/icare-components/icare-components.esm.js",
  "exports": {
    ".": {
      "import": "./dist/icare-components/icare-components.esm.js",
      "require": "./dist/icare-components/icare-components.cjs.js"
    },
    "./my-component": {
      "import": "./dist/components/my-component.js",
      "types": "./dist/components/my-component.d.ts"
    },
    "./loader": {
      "import": "./loader/index.js",
      "require": "./loader/index.cjs",
      "types": "./loader/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ajkirwan1/icare-components.git"
  },
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "dev": "concurrently -k -n STENCIL,SB -c green,cyan \"npm:watch:stencil\" \"npm:watch:storybook\"",
    "watch:stencil": "stencil build --watch",
    "watch:storybook": "storybook dev -p 6006",
    "generate": "stencil generate",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@semantic-release/npm": "^12.0.2",
    "@stencil/core": "^4.27.1",
    "@stencil/react-output-target": "^1.2.0",
    "@stencil/sass": "^3.2.1",
    "@storybook/addon-a11y": "^9.0.16",
    "@storybook/addon-docs": "^9.0.16",
    "@storybook/addon-vitest": "^9.0.16",
    "@storybook/web-components-vite": "^9.0.16",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.0",
    "eslint": "^9.33.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "lint-staged": "^16.1.5",
    "lit": "^3.3.1",
    "playwright": "^1.54.1",
    "puppeteer": "^24.3.0",
    "sass": "^1.89.2",
    "semantic-release": "^24.2.7",
    "storybook": "^9.0.16",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.tsx": [
      "eslint --fix"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "@stencil/router": "^1.0.1"
  }
}
